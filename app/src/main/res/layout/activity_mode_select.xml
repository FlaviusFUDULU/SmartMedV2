<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.ffudulu.licenta.ModeSelect"
        android:background="@color/colorPrimary"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/modeSelect.LogoImage"
            android:src="@mipmap/logo"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/modeSelect.medic"
            android:src="@mipmap/doctor"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/modeSelect.LogoImage"
            android:layout_centerInParent="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/modeSelect.txtMedic"
            android:layout_below="@+id/modeSelect.medic"
            android:text="Cadru Medical"
            android:textColor="#FFF"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/modeSelect.pacient"
            android:src="@mipmap/pacient"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/modeSelect.medic"
            android:layout_toStartOf="@+id/modeSelect.medic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/modeSelect.txtPactient"
            android:text="Pacient"
            android:textColor="#FFF"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/modeSelect.pacient"
            android:layout_alignStart="@+id/modeSelect.pacient"
            android:layout_marginLeft="13dp"
            android:layout_centerInParent="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/modeSelect.family"
            android:src="@mipmap/family"
            android:layout_marginTop="37dp"
            android:layout_below="@+id/modeSelect.medic"
            android:layout_toEndOf="@+id/modeSelect.medic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/modeSelect.txtFamily"
            android:text="Familie"
            android:textColor="#FFF"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/modeSelect.family"
            android:layout_alignStart="@+id/modeSelect.family"
            android:layout_marginLeft="18dp"
            android:layout_centerInParent="true"/>



    </RelativeLayout>
</ScrollView>
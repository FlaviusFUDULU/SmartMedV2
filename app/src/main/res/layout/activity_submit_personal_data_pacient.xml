<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.ffudulu.licenta.SubmitPersonalData"
        android:background="@color/colorPrimary"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Pacient.LogoImage"
            android:src="@mipmap/logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/Pacient.uID"
            android:background="@drawable/input_background"
            android:hint="Cod unic pacient"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/Pacient.LogoImage"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/Pacient.email"
            android:background="@drawable/input_background"
            android:hint="Email"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/Pacient.uID"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/Pacient.txtFirstName"
            android:background="@drawable/input_background"
            android:hint="Prenume"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/Pacient.email"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/Pacient.txtLastName"
            android:background="@drawable/input_background"
            android:hint="Nume"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/Pacient.txtFirstName"
            android:layout_alignParentStart="true" />


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:id="@+id/Pacient.ProfilePicture"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/Pacient.txtLastName"
            android:layout_above="@+id/Pacient.txtCNP"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@+id/Pacient.txtLastName"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salveaza"
            android:id="@+id/Pacient.btnSaveChanges"
            android:textColor="@color/common_google_signin_btn_text_light"
            android:background="@drawable/btn_background"
            android:layout_below="@+id/Pacient.txtSalon"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/Pacient.imageButtonPhoto"
            android:background="@mipmap/camera"
            android:layout_toRightOf="@+id/Pacient.ProfilePicture"
            android:layout_below="@+id/Pacient.txtLastName"
            android:layout_marginTop="17dp"
            android:layout_marginStart="20dp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/Pacient.imageButtonUpload"
            android:layout_below="@+id/Pacient.imageButtonPhoto"
            android:layout_alignStart="@+id/Pacient.imageButtonPhoto"
            android:background="@mipmap/folder"
            android:layout_marginStart="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Fotografiează"
            android:id="@+id/Pacient.lblTakePhoto"
            android:layout_alignTop="@+id/Pacient.imageButtonPhoto"
            android:layout_toEndOf="@+id/Pacient.imageButtonPhoto"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Încarcă imagine"
            android:id="@+id/Pacient.lblUploadPhoto"
            android:layout_alignTop="@+id/Pacient.imageButtonUpload"
            android:layout_toEndOf="@+id/Pacient.imageButtonUpload"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            android:textColor="#ffffff"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/Pacient.txtCNP"
            android:background="@drawable/input_background"
            android:hint="CNP"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/Pacient.lblUploadPhoto"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/Pacient.txtID"
            android:background="@drawable/input_background"
            android:hint="Serie Buletin"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/Pacient.txtCNP"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/Pacient.txtAge"
            android:background="@drawable/input_background"
            android:hint="Data de naștere"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/Pacient.txtID"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Pacient.spinnerFunction"
            android:layout_marginTop="5dp"
            android:spinnerMode="dropdown"
            style="@android:style/Widget.Material.Spinner.Underlined"
            android:padding="2dp"
            android:layout_below="@+id/Pacient.txtAge"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/Pacient.txtAddress"
            android:background="@drawable/input_background"
            android:hint="Adresă"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/Pacient.spinnerFunction"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/Pacient.txtPhoneNumber"
            android:background="@drawable/input_background"
            android:hint="Număr telefon"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/Pacient.txtAddress"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/Pacient.txtAssunrance"
            android:background="@drawable/input_background"
            android:hint="Cod de asigurat"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/Pacient.txtPhoneNumber"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/Pacient.txtDatainternarii"
            android:background="@drawable/input_background"
            android:hint="Data internării"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/Pacient.txtAssunrance"
            android:layout_alignParentStart="true" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/Pacient.txtSalon"
            android:background="@drawable/input_background"
            android:hint="Salon"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/Pacient.txtDatainternarii"
            android:layout_alignParentStart="true" />

        <ProgressBar
            android:id="@+id/Pacient.progressBarUpload"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:indeterminateDrawable="@drawable/progress_bar1"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/Pacient.imageButtonUpload"
            android:layout_below="@+id/Pacient.txtLastName"
            android:layout_marginTop="15dp"
            >
        </ProgressBar>

    </RelativeLayout>
</ScrollView>

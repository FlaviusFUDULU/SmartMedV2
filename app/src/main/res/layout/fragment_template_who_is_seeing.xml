<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <android.support.v7.widget.CardView

        android:id="@+id/WhoIsSeeingTmp.cardViewNume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"

        style="@style/CardAccount">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/WhoIsSeeingTmp.fullName"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Nume:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/WhoIsSeeingTmp.email"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/WhoIsSeeingTmp.fullName"
                android:layout_marginLeft="10dp"
                android:text="Email:: "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#ffffff" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toEndOf="@+id/WhoIsSeeingTmp.fullName">
                <ImageView
                    android:id="@+id/WhoIsSeeingTmp.Accept"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@+id/WhoIsSeeingTmp.seeMedicalRecord"
                    android:src="@mipmap/ic_aprove" />

                <ImageView
                    android:id="@+id/WhoIsSeeingTmp.Decline"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:src="@mipmap/ic_block" />

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
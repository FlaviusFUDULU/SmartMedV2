<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <android.support.v7.widget.CardView

        android:id="@+id/AllPacients.cardViewNume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"

        style="@style/CardAccount">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/AllPacients.photo"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:maxWidth="37dp"
                android:maxHeight="37dp"/>

            <TextView
                android:id="@+id/AllPacients.fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="Nume:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/AllPacients.salon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/AllPacients.fullName"
                android:layout_marginLeft="60dp"
                android:text="Salon: "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/AllPacients.duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/AllPacients.salon"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="0dp"
                android:text="Rezolvat in: "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#ffffff" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
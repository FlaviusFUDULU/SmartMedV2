<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:fitsSystemWindows="true"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/FamilyAccount.appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/FamilyAccount.collapsing"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            app:layout_scrollFlags="scroll|snap"
            >

            <ImageView
                android:id="@+id/FamilyAccount.profile_backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/account_background_family"
                app:layout_collapseMode="parallax"
                />
        </android.support.design.widget.CollapsingToolbarLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/FamilyAccount.toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            app:theme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            />

        <LinearLayout
            android:id="@+id/FamilyAccount.title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:text="Title"
                android:id="@+id/FamilyAccount.full_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:text="text"
                android:textColor="@android:color/white"
                android:id="@+id/FamilyAccount.email"
                />

        </LinearLayout>


    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/fragment_page_family"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/FamilyAccount.viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />



    <ImageView
        android:id="@+id/FamilyAccount.profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/user_avatar"
        app:layout_anchor="@id/FamilyAccount.title_container"
        android:elevation="8dp"
        app:border_width="2dp"
        app:border_color="#FFF"
        app:layout_scrollFlags="scroll"
        app:layout_anchorGravity="top|center_horizontal"
        android:maxHeight="96dp"
        android:maxWidth="96dp"
        />
    <ImageView
        android:id="@+id/FamilyAccount.profile_image_small"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_anchor="@id/FamilyAccount.title_container"
        android:elevation="8dp"
        app:border_width="2dp"
        app:border_color="#FFF"
        app:layout_anchorGravity="left|center"
        android:maxHeight="60dp"
        android:maxWidth="60dp"
        android:layout_marginLeft="15dp"
        />

</android.support.design.widget.CoordinatorLayout>